{
  "compilerOptions": {
    /* Modules */
    "module": "commonjs",                             
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,        

    "strict": true,
    "skipLibCheck": true ,
    
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "allowSyntheticDefaultImports": true
  }
}
